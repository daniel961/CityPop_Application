<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    android:padding="0dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="יצירת חשבון חדש"
        android:textColor="@color/TextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_toLogin_btn" />


    <Button
        android:id="@+id/clear_fields_btn"
        android:layout_width="104dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="31dp"
        android:background="@color/Buttons_color"
        android:text="נקה שדות"
        android:textColor="@color/TextColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/create_user_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <Button
        android:id="@+id/create_user_btn"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"
        android:background="@color/Buttons_color"
        android:text="צור משתמש"
        android:textColor="@color/TextColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_fields_btn" />

    <Button
        android:id="@+id/back_toLogin_btn"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/Buttons_color"
        android:text="חזור"
        android:textColor="@color/TextColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="316dp"
        android:layout_marginBottom="19dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/clear_fields_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="109dp">

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/Et_full_name_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="שם מלא"
                android:inputType="text"
                android:padding="10dp"
                android:shadowColor="@color/TextColor"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/TextColor"
                android:textColorHint="@color/TextColor"
                android:textColorLink="@color/TextColor"
                android:textDirection="ltr" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/Et_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="סיסמא"
                android:inputType="textPassword"
                android:padding="10dp"
                android:shadowColor="@color/TextColor"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/TextColor"
                android:textColorHint="@color/TextColor"
                android:textColorLink="@color/TextColor"
                android:textDirection="ltr" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/Et_password2_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="רשום שוב סיסמא"
                android:inputType="textPassword"
                android:padding="10dp"
                android:shadowColor="@color/TextColor"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/TextColor"
                android:textColorHint="@color/TextColor"
                android:textColorLink="@color/TextColor"
                android:textDirection="ltr" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/Et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="אימייל"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:shadowColor="@color/TextColor"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/TextColor"
                android:textColorHint="@color/TextColor"
                android:textColorLink="@color/TextColor"
                android:textDirection="ltr" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/TextColor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/Et_phone_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="טלפון נייד"
                android:inputType="phone|number"
                android:padding="10dp"
                android:shadowColor="@color/TextColor"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/TextColor"
                android:textColorHint="@color/TextColor"
                android:textColorLink="@color/TextColor"
                android:textDirection="ltr" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>